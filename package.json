{
  "name": "event-chat",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=18",
    "pnpm": ">=10",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter @event-chat/core build && pnpm --filter @event-chat/antd-item build && pnpm --filter @event-chat/example build",
    "antd-item:dev": "pnpm --filter \"@event-chat/antd-item\" build --watch",
    "core:dev": "pnpm --filter \"@event-chat/core\" build --watch",
    "example:dev": "pnpm --filter \"@event-chat/example\" dev",
    "example:storybook": "pnpm --filter \"@event-chat/example\" storybook",
    "format:check": "pnpm -r format:check",
    "lint": "pnpm -r lint",
    "commit:msg": "commitlint --edit $1",
    "pre:commit": "pnpm -r lint && pnpm run tsc --noEmit",
    "pre:build": "pnpm run tsc",
    "pre:pare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/core": "^1.0.0",
    "@eslint/js": "^9.39.2",
    "@rsbuild/core": "^1.6.14",
    "@rsbuild/plugin-eslint": "^1.2.0",
    "@rsbuild/plugin-react": "^1.4.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^25.0.2",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-ali": "^16.5.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.25",
    "eslint-plugin-storybook": "^10.1.10",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "release-please": "^17.1.3",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  }
}
